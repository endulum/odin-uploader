<h3>File Details</h3>
<ul>
  <li>
    <b>Type: </b>
    <%= file.type %>
  </li>
  <li>
    <b>Size: </b>
    <%= file.size %> bytes
  </li>
  <li>
    <b>Uploaded: </b>
    <%= 
      file.createdAt.toLocaleString('default', { 
        month: 'long', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', timeZone: 'UTC', timeZoneName: 'short'
      })
    %>
  </li>
  <li>
    <b>Last modified: </b>
    <%= 
      file.updatedAt
        ? file.updatedAt.toLocaleString('default', { 
            month: 'long', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', timeZone: 'UTC', timeZoneName: 'short'
          })
        : 'Never'
    %>
  </li>
</ul>