<form action=<%= '/directory/' + currentFolder.id + '/edit' %> method="post">
  <%- include('../components/form-input', { 
    name: 'name',
    label: 'Folder name',
    type: 'text',
    includePrevInput: true
  }) %>

  <%- include('../components/folder-tree-dropdown') %>

  <% if (
    currentFolder.shareUntil && 
    Date.parse(currentFolder.shareUntil) > Date.parse(new Date())
  ) { %>
    <p style="grid-column: 1 / 3;">
      Currently, this folder is <b>public</b>. It can be seen by anyone until <%= currentFolder.shareUntil %>. You can change the end date in the field below, or clear the date to make this folder private again.
    </p>
  <% } else { %>
    <p style="grid-column: 1 / 3;">
      Currently, this folder is <b>private</b>. It cannot be seen by anyone other than you. You can make this folder publically visible by entering a future date below. The folder can be seen by anyone until the entered date.
    </p>
  <% } %>

  <%- include('../components/form-input', { 
    name: 'shareUntil',
    label: 'Share until',
    type: 'date',
    includePrevInput: true
  }) %>

  <button type="submit">Submit</button>
</form>