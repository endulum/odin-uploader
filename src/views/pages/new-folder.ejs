<form action="/files/new-folder" method="post">
  <%- include('../components/form-input', { 
    name: 'name',
    label: 'Folder name',
    type: 'text',
    includePrevInput: true
  }) %>

  <label for="location">Select location</label>
  <div class="input">
    <select name="location" id="location">
      <option value="/">/</option>
    </select>
  </div>

  <button type="submit">Submit</button>
</form>