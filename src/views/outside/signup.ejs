<main class="form">

<h2>Sign Up</h2>

<% if (formMessage) { %>
  <p class="form-message"><%= formMessage %></p>
<% } %>

<form action="/signup" method="post">
  <label for="username">
    Username
  </label>
  <div class="input">
    <input type="text" name="username" id="username" value=<%= prevForm.username %>>
    <% if (formErrors && 'username' in formErrors) { %>
      <p>
        <small class="error">
          <%= formErrors.username %>
        </small>
      </p>
    <% } %>
  </div>

  <label for="password">
    Password
  </label>
  <div class="input">
    <input type="password" name="password" id="password">
    <% if (formErrors && 'password' in formErrors) { %>
      <p>
        <small class="error">
          <%= formErrors.password %>
        </small>
      </p>
    <% } %>
  </div>

  <label for="confirmPassword">
    Confirm
  </label>
  <div class="input">
    <input type="password" name="confirmPassword" id="confirmPassword">
    <% if (formErrors && 'confirmPassword' in formErrors) { %>
      <p>
        <small class="error">
          <%= formErrors.confirmPassword %>
        </small>
      </p>
    <% } %>
  </div>

  <button type="submit">Submit</button>
</form>

</main>

<p class="under-form">
  Have an account? <a href="/login">Log In</a>
</p>